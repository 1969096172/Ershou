<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="false"
    android:scrollbarSize="42sp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resulttv_id"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="Hello World!"
        android:textSize="42sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resulttv_id"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/right"
        android:text="åˆ "
        android:textSize="42dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button7"
        android:layout_weight="1"
        android:text="4"
        android:textSize="42sp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/divid"
        android:layout_weight="1"
        android:text="="
        android:textSize="42sp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plus"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button6"
        android:layout_weight="1"
        android:text="-"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button7"
        android:layout_weight="1"
        android:text="8"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_weight="1"
        android:text="1"
        android:textSize="42sp" />

    <Button
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resulttv_id"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/left"
        android:text=")"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button1"
        android:layout_weight="1"
        android:text="2"
        android:textSize="42sp" />

    <Button
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resulttv_id"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cle"
        android:text="("
        android:textSize="42sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button8"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button4"
        android:layout_weight="1"
        android:text="5"
        android:textSize="42sp" />

    <Button
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button1"
        android:layout_weight="1"
        android:text="."
        android:textSize="42sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cle"
        android:layout_weight="1"
        android:text="7"
        android:textSize="42sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button9"
        android:layout_weight="1"
        android:text="+"
        android:textSize="42sp" />

    <Button
        android:id="@+id/cle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resulttv_id"
        android:text="C"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_weight="1"
        android:text="0"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/right"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button8"
        android:layout_weight="1"
        android:text="9"
        android:textSize="42sp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button3"
        android:layout_weight="1"
        android:text="*"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button9"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button5"
        android:layout_weight="1"
        android:text="6"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button2"
        android:layout_weight="1"
        android:text="3"
        android:textSize="42sp" />

    <Button
        android:id="@+id/divid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/dot"
        android:layout_weight="1"
        android:text="/"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dot" />

</RelativeLayout>